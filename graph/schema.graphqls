# GraphQL schema

type HanziData {
  id: ID!
  simplified: String!
  pinyin: String!
  traditional: String!
  japanese: String!
  jundaFreq: Int
  gsNum: Int
  hskLvl: Int
}

enum Order {
    ASC
    DESC
}

input SortBy {
    field: String!
    order: Order!
}

type Query {
    hanzidata(sortBy: SortBy): [HanziData!]!
}
